@model LoginTredMarktViewModel;
<header>
    <div>
        @await Html.PartialAsync("_HeaderPartialAdmin", Model.welcomTredmarketProduction)
    </div>
</header>
<body>
    <div class="card shadow border-0 my-4 py-4">
        <div class="card-header bg-navbar bf-bb bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">

                    <h2 class="fnt-blue py-2">   إضافة الانتاج </h2>
                </div>
                <div class="col-12 text-center">
                    @if (Model.Productionvm.ProductionID != 0)
                    {
                        <h4 class="fnt-blue py-2"> " @Model.Productionvm.ProductName " </h4>
                    }
                </div>
            </div>
        </div>


        <form method="post" class="row" enctype="multipart/form-data" id="myForm1">
            <input asp-for="Productionvm.ProductionID" hidden />
            <input asp-for="Productionvm.ProductImage" hidden />
            <input asp-for="tredMaeketVM.BrandID" hidden />
            <input asp-for="tredMaeketVM.BrandName" hidden />
            <input asp-for="tredMaeketVM.Date1" hidden />
            <input asp-for="tredMaeketVM.BrandCoverImage" hidden />
            <input asp-for="tredMaeketVM.BrandFooterImage" hidden />
            <input asp-for="tredMaeketVM.BrandLogoImage" hidden />
            @* <input type="hidden" id="order-input" name="Productionvm.Order" value="0.1" />*@


            <div class="card-body p-4 py-4">
                <div class="border p-3">

                    @*added this class main-container-table*@
                    <div class="main-container-table">


                        <div id="exTab111" class="container">
                            <!-- Tab table -->
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <!-- Information Tab -->
                                        <td>
                                            <a class="nav-link" href="@Url.Action("RedirectToCreateAdminInformations1", "SectionDetailsProduction",
                                               new {area = "Admin", ProductionID = Model.Productionvm.ProductionID, brandFK = Model.welcomTredmarketProduction.TredMarktVM.BrandID })">المعلومات</a>

                                        </td>
                                        <!-- Components Tab -->
                                        <td>
                                            @if (Model.Productionvm.ProductionID != 0)
                                            {
                                                <a class="nav-link" href="@Url.Action("RedirectToCreateAdminComponent1", "SectionDetailsProduction",
                                               new {area = "Admin", ProductionID = Model.Productionvm.ProductionID, brandFK = Model.Productionvm.BrandFK })">المكونات</a>
                                            }
                                            else
                                            {
                                                <a class="nav-link">المكونات</a>
                                            }
                                        </td>
                                        <!-- Tools Tab -->
                                        <td>
                                            @if (Model.Productionvm.ProductionID != 0)
                                            {
                                                <a class="nav-link" href="@Url.Action("RedirectToCreateAdminTools1", "SectionDetailsProduction",
                                               new { area = "Admin",ProductionID = Model.Productionvm.ProductionID, brandFK = Model.Productionvm.BrandFK })">الأدوات</a>
                                            }
                                            else
                                            {
                                                <a class="nav-link">الأدوات</a>
                                            }
                                        </td>
                                        <!-- Steps Tab -->
                                        <td>
                                            @if (Model.Productionvm.ProductionID != 0)
                                            {
                                                <a class="nav-link" href="@Url.Action("RedirectToCreateAdminSteps1", "SectionDetailsProduction",
                                              new {area = "Admin", ProductionID = Model.Productionvm.ProductionID, brandFK = Model.Productionvm.BrandFK })">الخطوات</a>
                                            }
                                            else
                                            {
                                                <a class="nav-link">الخطوات</a>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            @* المعلومات *@
                            <div class="tab-pane active" id="1a">
                                <div>
                                    <h4 style="text-align:right">المعلومات</h4>
                                </div>
                                <div class=" row">
                                    <div class=" col-md-6 p-2">
                                        <div class="form-group">

                                            <label asp-for=" Productionvm.ProductName" class="control-label"> اسم الصنف </label>
                                            <input asp-for=" Productionvm.ProductName " class="form-control" />
                                            <span asp-validation-for=" Productionvm.ProductName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class=" col-md-6 p-2">
                                        <div class="form-group">
                                            <label asp-for=" Productionvm.VersionNumber" class="control-label">رقم النسخة</label>
                                            <input asp-for="Productionvm.VersionNumber" class="form-control" value="1" readonly />
                                            <span asp-validation-for=" Productionvm.VersionNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class=" col-md-6 p-2">
                                        <div class="form-group">
                                            <label asp-for=" Productionvm.Expiry" class="control-label">مدة الصلاحية</label>
                                            <input asp-for=" Productionvm.Expiry" class="form-control" />
                                            <span asp-validation-for=" Productionvm.Expiry" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @if (Model.Productionvm.ProductionID != 0)
                                    {
                                        <div class="col-md-6 p-2">
                                            <div class="form-group">
                                                <label asp-for="Productionvm.ProductType" class="control-label">نوع الصنف</label>
                                                <input asp-for=" Productionvm.ProductType" class="form-control" />
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-6 p-2">
                                            <div class="form-group">

                                                <label asp-for="Productionvm.ProductType" class="control-label">نوع الصنف</label>
                                                <select asp-for="Productionvm.ProductType" class="form-select" id="selectType">
                                                    <option value="" disabled selected>-- اختر نوع الصنف --</option>
                                                    @foreach (var item in Model.itemList33333)
                                                    {

                                                        <option value="@item.ProductType">@item.ProductType</option>

                                                    }
                                                    <option value="0">أضف نوعًا جديدًا</option> <!-- The "Add New" option -->
                                                </select>

                                                <input asp-for="Productionvm.ProductType" class="form-control" id="customTypeInput" style="display: none" />
                                                <div id="errorMessage" style="color: red; display: none;" class="py-3">
                                                    . يجب ادخال نوع الصنف *
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div class=" col-md-6 p-2">
                                        <div class="form-group">
                                            <label asp-for="  Productionvm.Station" class="control-label">المحطة</label>
                                            <input asp-for="Productionvm.Station" class="form-control" />
                                            <span asp-validation-for=" Productionvm.Station" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class=" col-md-6 p-2">
                                        <div class="form-group">
                                            <label asp-for=" Productionvm.PreparationTime" class="control-label"> وقت التحضير</label>
                                            <input asp-for=" Productionvm.PreparationTime" class="form-control" />
                                            <span asp-validation-for=" Productionvm.PreparationTime" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 btn-group">
                                        <div class="form-group col-8 p-0">

                                            <label asp-for=" Productionvm.ProductImage" class="ms-2"> ادخل صورة</label>
                                            <input type="file" name="file" class="form-control border-0 shadow" id="customFile"
                                                   onchange="document.getElementById('PreviewPhoto').src= window.URL.createObjectURL(this.files[0])" />
                                            <div id="errorMessage1" style="color: red; display: none;" class="py-3">
                                                . يجب ادخال صورة الأصناف النهائية *
                                            </div>
                                        </div>
                                    </div>
                                    @if (Model.Productionvm.ProductionID == 0)
                                    {
                                        <div class="form-group col-4">
                                            <div class="form-group col-12">
                                                <img id="PreviewPhoto" src="~/IMAGES/noImage.png" alt="Logo"
                                                     width="125" height="125" style="border:1px ; margin-top:20px" required />
                                            </div>
                                        </div>
                                    }
                                    else if (Model.Productionvm.ProductImage != null)
                                    {
                                        <div class="form-group col-4">
                                            <div class="form-group col-4">
                                                <img src="@Url.Content("~/IMAGES/" + Model.Productionvm.ProductionID + "/" + Model.Productionvm.ProductImage)"
                                                     alt="Logo" id="PreviewPhoto"
                                                     width="125" height="125" style="border:1px ; margin-top:20px" />
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="form-group col-4">
                                            <div class="form-group col-12">
                                                <img id="PreviewPhoto" src="~/IMAGES/noImage.png" alt="Logo"
                                                     width="125" height="125" style="border:1px ; margin-top:20px" required />
                                            </div>
                                        </div>
                                    }

                                    @* List *@
                                    @if (Model.Productionvm.ProductionID == 0)
                                    {
                                        <div class="form-floating py-2 col-12">
                                            @{
                                                var sortedPreparationName = Model.itemsList.OrderBy(item => item.ProductionOrder).ToList();
                                            }
                                            <select asp-for="Productionvm.ProductionID" class="form-select" id="selectPreparation" name="selectedValue">
                                                <option value="" disabled selected>-- اختر مكان الصف الجديد--</option>
                                                @foreach (var item in sortedPreparationName)
                                                {
                                                    <option value="@item.ProductionID">@item.ProductName</option>
                                                }
                                                <option value="0">اخر صف</option> <!-- The "Other" option -->
                                            </select>
                                        </div>
                                    }
                                    @*   <div class="form-group col-12 py-2">
                                    <div style="text-align: left;">

                                    <div class="form-group col-12 py-3 fxcc">
                                    <input type="submit" id="submitButton"
                                    value=" حفظ" href="@Url.Action("CreateProduction",
                                    "Production", new { id = Model.Productionvm.ProductionID,brandFK = Model.welcomTredmarketProduction.TredMarktVM.BrandID })" style="text-align:center" class="btn btn-style1 fnt-white me-3" abled />
                                    </div>
                                    </div>
                                    </div> *@





                                    @* أزرار الحفظ *@
                                    <div class="row pt-5 justify-content-center">
                                        <div class="form-group col-4 d-flex justify-content-center">
                                            <input type="submit" id="saveChange"
                                                   value=" حفظ " href="@Url.Action("CreateAdminInformations1",
                                                           "SectionDetailsProduction", new { brandFK = Model.Productionvm.BrandFK })" style="text-align:center" class="btn btn-style1 fnt-white me-3" abled />

                                          @*   <a asp-area="Admin" asp-controller="SectionDetailsProduction" asp-action="RedirectToProductionAdmin" asp-route-brandFk="@Model.tredMaeketVM.BrandID" class="btn btn-style1 fnt-white me-3" abled>
                                                قائمة الإنتاج

                                            </a> *@

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</body>

@section Scripts {
    <script src="~/Js/ProductionAdmin/customAdmin.js"></script>

}
