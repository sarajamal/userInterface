@page
@model LoginModel

<div class="container login-sec">
    <div class="card shadow border-0 mt-4">
        <div id="Headcard" class="card-header bg-white bg-primary mb-3 ml-0 pt-4 custom-dark-bg ">
            <div class="row">
                <div class="col-12 text-center py-2">
                    <div>
                        <img class="bf-logo" src="~/IMAGES/BeFranchisor_FinalLogo.png" alt="befranchisor logo" width="100" height="100">
                    </div>
                </div>
                <div class="col-12 text-center pt-4">
                    <h2 class=" bf-title1">تسجيل الدخول</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form id="account" method="post">
                            <!-- Include the ReturnUrl as a hidden field -->
                            <input type="hidden" asp-for="ReturnUrl" />

                            <!-- Validation Summary for displaying all error messages in one place -->
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.UserName" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="username" aria-required="true">
                                <label asp-for="Input.UserName" class="form-label">اسم المستخدم</label>
                                <span asp-validation-for="Input.UserName" class="text-danger"></span> <!-- Display specific field error -->
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="كلمة المرور" autocomplete="current-password" aria-required="true">
                                <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span> <!-- Display specific field error -->
                            </div>

                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg fnt-white btn-style1 mb-1">
                                    تسجيل الدخول
                                </button>
                            </div>

                            <div class="col-md-12">
                                <section>
                                    <p class="divider-text d-flex pt-3">أو</p>
                                   @*  <p>
                                        <a asp-page="./Register" class="fnt-blue" asp-route-returnUrl="@Model.ReturnUrl">التسجيل كمستخدم جديد</a>
                                    </p> *@
                                    <p>
                                        <a asp-page="./ForgotPassword" class="fnt-blue">هل نسيت كلمة المرور ؟</a>
                                    </p>
                                </section>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
